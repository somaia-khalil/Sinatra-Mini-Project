<body style="background-color:lightblue;">

<table style="border: 1px solid black"> 
    <tr>
        <td><a href="/users">Users</a> | </td>
        <td><a href="/trees">Trees</a></td>
    </tr>

</table>

<br/>




<label>Tree Info:</label>
<br/>
<label>Species:</label>
<h5><%= @tree.species %></h5>
<br/>
<label>Users that own an <%= @tree.species%> Tree</label>
<table style="border: 1px solid black">
<% @tree.user_trees.each do |user_tree| %>
        
        <tr>
        
        <td>Name: <a href="/users/<%= user_tree.user_id %>"><%= user_tree.user.name %></a></td>
        <td>Cost: <%= user_tree.cost %></td>
        <td>Age: <%= user_tree.age %></td>
        </tr>
        

<% end %>
</table>
<br/>
<button>
<a href="/trees/<%= @tree.id%>/edit">
Edit tree info
</a>
</button>

<form action="/trees/<%= @tree.id %>" method="post">
<input type="hidden" name="_method" value="delete"/>
<input type="submit" value="Remove Tree"/>
</form>

<br/>

<button>
<a href="/trees">
Back
</a>
</button>

</body>



